<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.com.xuct.group.purchase.mapper.UserOrderMapper">
    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="cn.com.xuct.group.purchase.entity.UserOrder">
        <id column="id" property="id"/>
        <result column="create_time" property="createTime"/>
        <result column="deliver_time" property="deliverTime"/>
        <result column="serve_time" property="serveTime"/>
        <result column="good_num" property="goodNum"/>
        <result column="remarks" property="remarks"/>
        <result column="integral" property="integral"/>
        <result column="rush" property="rush"/>
        <result column="address_id" property="addressId"/>
        <collection property="items" column="{orderId=id}"
                    select="cn.com.xuct.group.purchase.mapper.UserOrderItemMapper.getOrderItemByOrderId"/>
    </resultMap>

    <select id="list" resultMap="BaseResultMap">
        select id , create_time , deliver_time , serve_time , status , good_num , rush
        from bu_user_order
        where 1 =1
        and user_id = #{userId}
          and deleted = false
          and refund_status = 0
        <if test="status != null">
            and status = #{status}
        </if>
    </select>

    <select id="getOrderDetail" resultMap="BaseResultMap">
        select id, create_time, deliver_time, serve_time, status, good_num , address_id ,integral , rush
        from bu_user_order
        where 1 = 1
          and deleted = false
          and refund_status = 0
          and user_id = #{userId}
          and id = #{orderId}
    </select>


</mapper>