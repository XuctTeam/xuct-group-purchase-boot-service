<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.com.xuct.group.purchase.mapper.UserGoodCartMapper">


    <insert id="addGoodCart">
        insert into bu_good_user_cart(user_id, good_id)
        values (#{userId}, #{goodId}) on duplicate key
        update
           num = num + 1
    </insert>
</mapper>